{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "types": ["@types/jest"],
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "paths": {
      "@Common/*": ["src/common/*"],
      "@Wallet/*": ["src/modules/wallet/*"],
      "@Access/*": ["src/modules/access/*"],
      "@KMS/*": ["src/modules/kms/*"],
      "@SharedKernel/*": ["src/modules/shared-kernel/*"]
    }
  }
}
